{
  "name": "@borales/actions-yarn",
  "version": "4.2.0",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
